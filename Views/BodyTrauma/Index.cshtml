@model IEnumerable<InteractHealthProDatabase.Models.BodyTrauma>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateOrEdit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bruising)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bleeding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fracture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LossOfContentiousness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HitToTheHead)
            </th>
