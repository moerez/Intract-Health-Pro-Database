@model InteractHealthProDatabase.Models.InsuranceCompanyContact

@{
    ViewData["Title"] = "Details";
}

<div class="row align-items-center p-2">
    <h1 class="col-auto p-0">@($"{Model.Title} {Model.ContactName}")</h1>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm col-auto mx-2">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-danger btn-sm col-auto mx-2">Delete</a>
    <span class="col"></span>
    <a asp-action="Index" asp-controller="InsuranceCompany" asp-route-id="@Model?.InsuranceCompany.Id"
        class="btn btn-secondary col-auto">Back</a>
    <hr />
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceCompany)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InsuranceCompany.Title)
        </dd>
        @if (Model?.Email != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        }

        @if (Model?.CellPhone != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CellPhone)
            </dt>
            <dd class="col-sm-10">
                <a href="tel:@Html.DisplayFor(model => model.CellPhone)">@Html.DisplayFor(model => model.CellPhone)</a>
            </dd>
        }


        @if (Model?.Telephone != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telephone)
            </dt>
            <dd class="col-sm-10">
                <a href="tel:@Html.DisplayFor(model => model.Telephone)">@Html.DisplayFor(model => model.Telephone)</a>
            </dd>
        }
        @if (Model?.Fax != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fax)
            </dt>
            <dd class="col-sm-10">
                <a href="tel:@Html.DisplayFor(model => model.Fax)">@Html.DisplayFor(model => model.Fax)</a>
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address) <br />
            @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.Region) <br />
            @Html.DisplayFor(model => model.Country) <br />
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
    </dl>
</div>


