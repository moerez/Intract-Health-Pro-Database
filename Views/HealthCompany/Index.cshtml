@model IEnumerable<InteractHealthProDatabase.Models.HealthCompany>

@{
    ViewData["Title"] = "Index";
}

<div class="form-group row align-items-center px-2">
    <h1 class="col">Health Companies</h1>
    <a asp-action="Create" class="btn btn-primary col-auto">Add Company</a>
    <hr />
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Index" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
            </tr>
        }
    </tbody>
</table>
