@model InteractHealthProDatabase.Models.Case

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Case</h2>

<h4>Case List</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CaseRef" class="control-label"></label>
                <input asp-for="CaseRef" class="form-control" />
                <span asp-validation-for="CaseRef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherRef" class="control-label"></label>
                <input asp-for="OtherRef" class="form-control" />
                <span asp-validation-for="OtherRef" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
