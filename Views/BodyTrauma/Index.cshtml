                @Html.DisplayNameFor(model => model.None)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PainRightAway)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bruising)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bleeding)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fracture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LossOfContentiousness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HitToTheHead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.None)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PainRightAway)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
